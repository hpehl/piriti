<?xml version="1.0" encoding="UTF-8"?>
<module>
    <inherits name="com.google.gwt.inject.Inject" />
    <inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.xml.XML" />
    <inherits name="name.pehl.piriti.commons.Commons" />
    <inherits name="name.pehl.piriti.converter.Converter" />
    <inherits name="name.pehl.piriti.property.Property" />
    <inherits name="name.pehl.totoe.xml.XML" />
    
    <source path="client" />

    <!-- Generator for XmlReader -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.xml.client.XmlReader" />
    </generate-with>

    <!-- Generator for XmlWriter -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.xml.client.XmlWriter" />
    </generate-with>

    !-- Generator for XmlReaderWriter -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlReaderWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.xml.client.XmlReaderWriter" />
    </generate-with>
</module>
