<?xml version="1.0" encoding="UTF-8"?>
<module>
    <inherits name="com.google.gwt.inject.Inject" />
    <inherits name="com.google.gwt.json.JSON" />
    <inherits name="com.google.gwt.user.User" />
    <inherits name="name.pehl.piriti.commons.Commons" />
    <inherits name="name.pehl.piriti.converter.Converter" />
    <inherits name="name.pehl.piriti.property.Property" />
    <inherits name="name.pehl.totoe.json.JSON" />

    <!-- Generator for JsonReader -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.json.client.JsonReader" />
    </generate-with>

    <!-- Generator for JsonWriter -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.json.client.JsonWriter" />
    </generate-with>

    <!-- Generator for JsonReaderWriter -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonReaderWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.json.client.JsonReaderWriter" />
    </generate-with>
</module>
