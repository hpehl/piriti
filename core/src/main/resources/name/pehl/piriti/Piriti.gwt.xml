<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0-rc2//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.0-rc2/distro-source/core/src/gwt-module.dtd">
<module>
    <!--
        $LastChangedBy: harald.pehl 
        $LastChangedRevision: 138 $
    -->
    <inherits name="com.google.gwt.inject.Inject" />
    <inherits name="com.google.gwt.json.JSON" />
    <inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.xml.XML" />
    <inherits name="com.mouchel.gwt.xpath.xpath" />

    <source path="client">
        <exclude name="gwttest/**/*" />
        <exclude name="**/*Test.java" />
    </source>

    <script src="json2.js" />
    <script src="sarissa.js" />
    <script src="sarissa_ieemu_xpath.js" />

    <!-- Generator for XmlReader -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.client.xml.XmlReader" />
    </generate-with>

    <!-- Generator for JsonReader -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.client.json.JsonReader" />
    </generate-with>

    <!-- Ginjector configuration: 
    Please note that this feature is not yet implemented!
    <define-configuration-property name="converter.ginjector" is-multi-valued="false" />
    <define-configuration-property name="json.ginjector" is-multi-valued="false" />
    <define-configuration-property name="xml.ginjector" is-multi-valued="false" />
    -->

    <!-- Default implementations. Overwrite to provide your own implementations: 
    Please note that this feature is not yet implemented! 
    <set-configuration-property name="converter.ginjector" value="name.pehl.piriti.client.converter.ConverterGinjector" />
    <set-configuration-property name="json.ginjector" value="name.pehl.piriti.client.json.JsonGinjector" />
    <set-configuration-property name="xml.ginjector" value="name.pehl.piriti.client.xml.XmlGinjector" />
    -->
</module>
